{
  "name": "bwv-siegel",
  "version": "1.0.0",
  "description": "Bach Siegel Animation Web Component with Quantized Light-Refraction Physics",
  "type": "module",
  "main": "bwv-siegel.js",
  "module": "bwv-siegel.js",
  "browser": "bwv-siegel.js",
  "exports": {
    ".": "./bwv-siegel.js",
    "./component": "./bwv-siegel.js"
  },
  "files": [
    "bwv-siegel.js",
    "bwv-siegel.html",
    "bwv-siegel.css",
    "src/",
    "assets/",
    "demo.html",
    "test/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node test/angle-calculator.test.js && node test/angle-calculator-enhanced.test.js",
    "test:basic": "node test/angle-calculator.test.js",
    "test:enhanced": "node test/angle-calculator-enhanced.test.js",
    "test:watch": "nodemon --watch src --watch test -e js --exec 'npm test'",
    "demo": "python -m http.server 8080 || python3 -m http.server 8080",
    "build": "echo 'No build step needed - pure Web Component'",
    "lint": "echo 'Add ESLint if needed'",
    "dev": "python -m http.server 8080 || python3 -m http.server 8080",
    "serve": "python -m http.server 8080 || python3 -m http.server 8080"
  },
  "keywords": [
    "bach",
    "siegel", 
    "animation",
    "web-component",
    "quantization",
    "physics",
    "light-refraction",
    "custom-element",
    "geodesic",
    "probability",
    "gaussian"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bwv-siegel.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bwv-siegel/issues"
  },
  "homepage": "https://github.com/yourusername/bwv-siegel#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "defaults",
    "supports es6-module"
  ],
  "devDependencies": {
    "assert": "^2.0.0",
    "nodemon": "^3.0.0"
  }
}